<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="#729939"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/ib_top_bar_back_btn"
            android:src="@drawable/btn_top_bar_back"
            android:background="@drawable/btn_play_bar_common"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_top_bar_title"
            android:text="音乐"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/ib_top_bar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/ib_top_bar_search_btn"
            android:src="@drawable/btn_top_bar_search"
            android:background="@drawable/btn_play_bar_common"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</RelativeLayout>