<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_music_image"
        android:src="@drawable/ic_launcher"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_music_name"
            android:text="歌曲名"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_music_singer"
            android:text="歌手名 "
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_music_toggle"
        android:background="@drawable/btn_play_bar_common"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btn_music_play_next"
        android:src="@drawable/btn_play_bar_next"
        android:background="@drawable/btn_play_bar_common"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent" />




</LinearLayout>